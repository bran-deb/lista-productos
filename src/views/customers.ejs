<!DOCTYPE html>
<html lang="en">

 <head>
    <meta charset="UTF-8">
    <title>Postres</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
 </head>

 <body>

    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-brand">lista de postres</a>

    </nav>


<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>nÂ°</th>
                        <th>nombre postre</th>
                        <th>descripcion</th>

                        <th>quitar</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data) { %>
                        <% for (var i = 0; i < data.length; i++){ %>
                            <tr>
                                <td><%= (i+1) %></td>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].recipe %></td>

                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">delete</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>

                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="nombre" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="recipe" placeholder="descripcion" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            guardar postre
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<%-include('partials/_footer');-%>